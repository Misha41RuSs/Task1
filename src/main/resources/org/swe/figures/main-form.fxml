<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.0"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.swe.figures.Controller"
            prefWidth="800.0" prefHeight="520.0">

   <!-- Верхняя панель -->
   <top>
      <HBox spacing="10" alignment="CENTER_LEFT">
         <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
         </padding>
         <children>
            <Label text="Рисование фигур" maxWidth="Infinity" HBox.hgrow="ALWAYS" alignment="CENTER">
               <font>
                  <Font name="Times New Roman Bold" size="32.0" />
               </font>
            </Label>

            <!-- Цвет -->
            <Label text="Цвет:"/>
            <ColorPicker fx:id="colorPicker" />

            <!-- Толщина -->
            <Label text="Толщина:"/>
            <Slider fx:id="lineWidthSlider" min="1" max="10" value="2" showTickMarks="true" showTickLabels="true"
                    majorTickUnit="1" prefWidth="120"/>

            <!-- Заливка -->
            <CheckBox fx:id="fillCheckBox" text="Заливка" />
         </children>
      </HBox>
   </top>

   <!-- Центр: холст -->
   <center>
      <Canvas fx:id="canvas" width="760.0" height="400.0"/>
   </center>

   <!-- Нижняя панель -->
   <bottom>
      <HBox alignment="CENTER" spacing="20">
         <padding>
            <Insets top="10" bottom="10"/>
         </padding>
         <children>
            <Label text="Режим:"/>
            <ComboBox fx:id="modeComboBox" prefWidth="200.0"/>
            <Button fx:id="clear" onAction="#clear" text="Очистить" />
         </children>
         <Button fx:id="undo" onAction="#undo" text="Отменить" />
      </HBox>
   </bottom>
</BorderPane>
