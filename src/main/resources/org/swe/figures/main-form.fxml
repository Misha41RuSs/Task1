<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>


<?import javafx.geometry.Insets?>
<FlowPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
          minWidth="-Infinity" prefHeight="484.0" prefWidth="800.0"
          xmlns="http://javafx.com/javafx/21.0.5"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="org.swe.figures.Controller"
          alignment="TOP_CENTER">
   <children>
      <Label text="Рисование фигур">
         <font>
            <Font name="Times New Roman Bold" size="39.0" />
         </font>
      </Label>
      <Canvas height="372.0" width="741.0"
            fx:id="canvas"/>
      <Button fx:id="rectangle" mnemonicParsing="false" onAction="#drawRect" text="Прямоугольник">
         <font>
            <Font name="Times New Roman" size="21.0" />
         </font>
         <FlowPane.margin>
            <Insets right="20"/>
         </FlowPane.margin>
      </Button>
      <Button fx:id="triangle" mnemonicParsing="false" onAction="#drawTriangle" text="Треугольник">
         <font>
            <Font name="Times New Roman" size="21.0" />
         </font>
         <FlowPane.margin>
            <Insets right="20"/>
         </FlowPane.margin>
      </Button>
      <Button fx:id="fiveangle" mnemonicParsing="false" onAction="#drawFiveAngle" text="Пятиугольник">
         <font>
            <Font name="Times New Roman" size="21.0" />
         </font>
         <FlowPane.margin>
            <Insets right="20"/>
         </FlowPane.margin>
      </Button>
      <Button fx:id="circle" mnemonicParsing="false" onAction="#drawCircle" text="Круг">
         <font>
            <Font name="Times New Roman" size="21.0" />
         </font>
         <FlowPane.margin>
            <Insets right="20"/>
         </FlowPane.margin>
      </Button>
      <Button fx:id="clear" mnemonicParsing="false" onAction="#clear" text="Очистить">
         <font>
            <Font name="Times New Roman" size="21.0" />
         </font>
         <FlowPane.margin>
            <Insets right="20"/>
         </FlowPane.margin>
      </Button>
   </children>
</FlowPane>
